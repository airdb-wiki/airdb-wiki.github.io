---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<article class="sl-flex" aria-labelledby="about-astro-heading">
  <small id="about-astro-heading">
    {title}
    <div class="text-container">
      <span class="sr-only">Astro</span>
    </div>
  </small>
  <slot />

  <img
    src="../src/assets/together.svg"
    alt="learn build grow together"
    width="800"
    height="300"
  />

  <div class="text-container">
    Learn from the web's leading experts. <br />
    Build something new in public. <br />
    Grow your career. <br />
    Let's do it together.
  </div>

  <a href="https://github.com/airdb/">Learn about Airdb</a>
</article>

<style>
  article {
    max-width: 40rem;
    margin-inline: auto;
    padding-block: 5rem;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 0.5rem;
  }
  article > :global(*) {
    max-width: 50ch;
    margin-top: 0 !important;
  }
  small {
    color: var(--sl-color-gray-3);
  }
  .text-container {
    display: inline-block;
    text-align: left;
    margin: 0 auto;
  }
</style>
